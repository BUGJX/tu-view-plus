{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "strict": true,
    "target": "ES2018",
    "module": "ESNext",
    "skipLibCheck": true,
    "composite": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "types": ["node", "unplugin-vue-macros/macros-global"],
    "paths": {
      "@tu-view-plus/*": ["packages/*"]
    }
  },
  "include": ["packages", "vitest.setup.ts", "typings/env.d.ts"],
  "exclude": ["node_modules", "dist", "**/*.md"]
}
